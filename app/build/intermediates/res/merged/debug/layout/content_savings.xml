<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="maybank.mum.Savings"
    tools:showIn="@layout/activity_savings">


    <Button
        android:id="@+id/leftbutton"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="335dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rightbutton"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="335dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_orange_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Savings"
        app:titleTextColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="228dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="99dp"
        android:text="RM6293"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="134dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Allocate Savings"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="189dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/textView15"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        android:layout_marginStart="28dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="136dp"
        android:layout_height="34dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="57dp"
        android:text="Fixed Deposits"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginLeft="31dp"
        android:text="RM2000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="139dp"
        android:layout_height="34dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="38dp"
        android:text="Unused Savings"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="139dp"
        android:layout_height="31dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="38dp"
        android:text="Savings Account"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_marginLeft="31dp"
        android:text="RM2430"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="@+id/textView25" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:text="RM1863"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Save!"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Save!"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

</android.support.constraint.ConstraintLayout>

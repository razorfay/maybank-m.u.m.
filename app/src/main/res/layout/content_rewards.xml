<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="maybank.mum.Rewards"
    tools:showIn="@layout/activity_rewards">

    <Button
        android:id="@+id/leftbutton"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="335dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Rewards"
        app:titleTextColor="@android:color/black"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="84dp"
        android:layout_height="57dp"
        android:layout_marginRight="148dp"
        android:layout_marginTop="28dp"
        android:text="629"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="32dp"
        android:text="RM10 ----------> 1 Point"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/Rebates"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginTop="76dp"
        android:text="Coupons"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:text="Rebates"
        android:textSize="24sp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/Rebates"
        android:layout_marginLeft="-3dp"
        app:layout_constraintLeft_toLeftOf="@+id/Rebates" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:text="Gifts"
        android:textSize="24sp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textView27"
        android:layout_marginLeft="-3dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView27" />

    <Button
        android:id="@+id/button"
        android:layout_width="82dp"
        android:layout_height="43dp"
        android:text="Claim"
        app:layout_constraintTop_toTopOf="@+id/Rebates"
        android:layout_marginTop="-8dp"
        app:layout_constraintLeft_toRightOf="@+id/Rebates"
        android:layout_marginLeft="68dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:text="Claim"
        app:layout_constraintTop_toTopOf="@+id/textView27"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/textView27"
        android:layout_marginLeft="65dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Claim"
        app:layout_constraintTop_toTopOf="@+id/textView28"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/textView28"
        android:layout_marginLeft="65dp" />

</android.support.constraint.ConstraintLayout>
